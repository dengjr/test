<% include header.ejs %>
  <h1>修改</h1>
  <a style="position:absolute;right:200px;top:80px;" href="/edit">编辑</a>
<hr>
<form class="form-horizontal form1" style="margin-top:20px;" method="post" action="/change" enctype="application/x-www-form-urlencoded">
	<input name="_id" value="<%= mus._id %>"  type="hidden">
  <div class="form-group">
    <label for="input1" class="col-sm-2 control-label">歌名</label>
    <div class="col-sm-10">
      <input name="musicName" type="text" class="form-control" id="input1"  value="<%= mus.musicName %>">
    </div>
  </div>


  <div class="form-group">
    <label for="input2" class="col-sm-2 control-label">歌手</label>
    <div class="col-sm-10">
      <input name="singer" type="text" class="form-control" id="input2"  value="<%= mus.singer %>">
    </div>
  </div>

  <div class="form-group">
    <label for="input3" class="col-sm-2 control-label">发布时间</label>
    <div class="col-sm-10">
      <input name="publish" type="date" class="form-control" id="input3" value="">
    </div>
  </div>

  <div class="form-group">
    <label for="input6" class="col-sm-2 control-label">歌词</label>
    <div class="col-sm-10">
      <textarea rows="3" cols="20" name="lyric"   class="form-control" id="input6" ><%= mus.lyric %></textarea>
    </div>
  </div>

  <div class="form-group">
    <label for="input4" class="col-sm-2 control-label">简介</label>
    <div class="col-sm-10">
      <input name="summary" type="text" class="form-control" id="input4" value="<%= mus.summary %>">
    </div>
  </div>


  
</form>

<form class="form-horizontal form2"  method='post', action='/ajax',  enctype='multipart/form-data'>
  <label for="input5" class="col-sm-2 control-label">文件上传</label>
      <input name='inputFile',id="input5" type='file', multiple='mutiple'>
     <!--  <input class="inp" type="submit" value="上传"> -->
    </form>

<div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button id="submit" class="btn btn-default">修改</button>
        </div>
      </div>
      
<script type="text/javascript">
   $("#submit").click(function(e){
    e.preventDefault();
      $(".form1").submit();

       var formData = new FormData($( ".form2" )[0]);  
     $.ajax({  
          url: '/ajax' ,  
          type: 'POST',  
          data: formData,  
          async: false,  
          cache: false,  
          contentType: false,  
          processData: false,  
          success: function (returndata) {  
              alert("上传成功");  
          },  
          error: function (returndata) {  
              alert("上传失败");  
          }  
     });  
  });


</script>



</div>
<% include footer.ejs %>